@using System.Data
@model System.Data.DataTable


@{
    ViewBag.Title = "學生修改";
}

<h2>學生修改</h2>

<form method="post" action="@Url.Action("Edit")">

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <span class="control-label col-md-2">姓名</span>
            <div class="col-md-10">
                <input type="hidden" id="fStuId" name="fStuId" value="@Model.Rows[0]["fStuId"]" />
                <input type="text" id="fName" name="fName" class="form-control" value="@Model.Rows[0]["fName"]" required />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">信箱</span>
            <div class="col-md-10">
                <input type="email" id="fEmail" name="fEmail" class="form-control" value="@Model.Rows[0]["fEmail"]" required />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">成績</span>
            <div class="col-md-10">
                <input type="number" id="fScore" name="fScore" class="form-control" min="0" max="100" value="@Model.Rows[0]["fScore"]" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="更新" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("返回列表", "queryindex")
</div>


